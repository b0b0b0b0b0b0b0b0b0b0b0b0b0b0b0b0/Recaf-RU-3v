{
	"name": "XML",
	"wrap": false,
	"rules": [
		{
			"name": "comment-multi",
			"pattern": "<!--[\\w\\W]*?-->",
			"backtrackStop": "<!--",
			"backtrackTrigger": "-->"
		},
		{
			"name": "string",
			"pattern": "\"(?:[^\"\\\\]|\\\\.)*\""
		},
		{
			"name": "keyword",
			"pattern": "(?<=<)[?\\w\\.]+(?=[\\w\\W]+>)|(?<=<\\/)[\\w\\.]+(?=>)"
		}
	]
}